<?xml version="1.0"?>
<robot name="rover">
  <link name="world"/>
  <link name="axle_link">
    <contact>
      <lateral_friction value="1.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="30000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <mass value="2.637"/>
      <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.02467" iyz="0" izz="0.04411"/>
    </inertial>
    <collision>
      <geometry>
        <cylinder radius="1" length="1"/>
      </geometry>
    </collision>
  </link>
  <link name="wheel_link">
    <contact>
      <lateral_friction value="1.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="30000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <mass value="2.637"/>
      <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.02467" iyz="0" izz="0.04411"/>
    </inertial>
    <collision>
      <geometry>
        <cylinder radius="0.5" length="1"/>
      </geometry>
    </collision>
  </link>
  <joint name="j1" type="continuous">
    <parent link="world"/>
    <child link="axle_link"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>
  <joint name="j2" type="continuous">
    <parent link="axle_link"/>
    <child link="wheel_link"/>
    <origin xyz="0 0 1.5"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>
</robot>
