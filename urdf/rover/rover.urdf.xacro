<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">

  <xacro:property name="base_width" value="0.553"/>
  <xacro:property name="base_len" value="0.482"/>
  <xacro:property name="base_height" value="0.186"/>
  <xacro:property name="wheel_radius" value="0.13"/>
  <xacro:property name="wheel_width" value="0.1"/>
  <xacro:property name="wheel_mass" value="1"/>
  <xacro:property name="chassis_mass" value="15"/>

  <xacro:property name="PI" value="3.141592"/>

  <!-- Inertial macros-->
  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${m*(3*r*r+h*h)/12}" ixy="0" ixz="0" iyy="${m*(3*r*r+h*h)/12}" iyz="0" izz="${m*r*r/2}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${m / 12.0 * (d*d + h*h)}" ixy="0" ixz="0" iyy="${m / 12.0 * (w*w + h*h)}" iyz="0"
               izz="${m / 12.0 * (w*w + d*d)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${2.0*m*(r*r)/5.0}" ixy="0" ixz="0" iyy="${2.0*m*(r*r)/5.0}" iyz="0"
               izz="${2.0*m*(r*r)/5.0}"/>
    </inertial>
  </xacro:macro>

  <!-- Links -->

  <link name="base_link">
  </link>

  <link name="chassis_link">
    <xacro:box_inertia m="${chassis_mass}" w="${base_len}" h="${base_width}" d="${base_height}"/>
    <!--    <visual>-->
    <!--      <geometry>-->
    <!--        <mesh filename="package://mrover/urdf/meshes/cube.glb"/>-->
    <!--      </geometry>-->
    <!--    </visual>-->
    <collision>
      <geometry>
        <box size="${base_len} ${base_width} ${base_height}"/>
      </geometry>
    </collision>
  </link>

  <xacro:macro name="wheel" params="name reflect">
    <link name="${name}_wheel_link">
      <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_width}"/>
      <!--      <visual>-->
      <!--        <origin rpy="0 ${min(0, reflect) * PI} 0" xyz="0 0 0"/>-->
      <!--        <geometry>-->
      <!--          <mesh filename="package://mrover/urdf/meshes/rover.wheel.dae"/>-->
      <!--        </geometry>-->
      <!--      </visual>-->
      <collision>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
    </link>

    <link name="${name}_axle_link">
      <xacro:cylinder_inertia m="1" r="0.01" h="0.1"/>
      <collision>
        <geometry>
          <cylinder length="0.1" radius="0.01"/>
        </geometry>
      </collision>
    </link>

    <joint name="${name}_axle_link_to_${name}_wheel_link" type="continuous">
      <parent link="${name}_axle_link"/>
      <child link="${name}_wheel_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="2.68" velocity="0"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="wheels" params="side reflect">
    <xacro:wheel name="front_${side}" reflect="${reflect}"/>
    <xacro:wheel name="center_${side}" reflect="${reflect}"/>
    <xacro:wheel name="back_${side}" reflect="${reflect}"/>

    <link name="${side}_bogie_link">
      <xacro:box_inertia m="3" w="0.5" h="0.5" d="0.5"/>
      <collision>
        <origin xyz="-0.14 0.1 0" rpy="0 0 -0.734"/>
        <geometry>
          <box size="0.2 0.025 0.025"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0.1 0.088 0" rpy="0 0 0.734"/>
        <geometry>
          <box size="0.2 0.025 0.025"/>
        </geometry>
      </collision>
    </link>

    <link name="${side}_rocker_link">
      <xacro:box_inertia m="3" w="0.5" h="0.5" d="0.5"/>
      <collision>
        <origin xyz="0.11 0.077 0" rpy="0 0 0.585"/>
        <geometry>
          <box size="0.2 0.025 0.025"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="-0.22 0.15 0" rpy="0 0 -0.585"/>
        <geometry>
          <box size="0.5 0.025 0.025"/>
        </geometry>
      </collision>
    </link>

    <joint name="chassis_link_to_${side}_rocker_link" type="revolute">
      <parent link="chassis_link"/>
      <child link="${side}_rocker_link"/>
      <origin xyz="0.17 ${reflect * (base_width/2 + 0.03)} 0" rpy="${-PI/2} 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.122173" upper="0.523599" effort="0" velocity="0"/>
    </joint>

    <joint name="${side}_rocker_link_to_back_${side}_axle_link" type="continuous">
      <parent link="${side}_rocker_link"/>
      <child link="back_${side}_axle_link"/>
      <origin xyz="-0.42 0.286 ${reflect * 0.07}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <joint name="${side}_rocker_link_to_${side}_bogie_link" type="revolute">
      <parent link="${side}_rocker_link"/>
      <child link="${side}_bogie_link"/>
      <origin xyz="0.202 0.134 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.349066" upper="0.349066" effort="0" velocity="0"/>
    </joint>

    <joint name="${side}_bogie_link_to_front_${side}_axle_link" type="continuous">
      <parent link="${side}_bogie_link"/>
      <child link="front_${side}_axle_link"/>
      <origin xyz="0.174 0.157 ${reflect * 0.07}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <joint name="${side}_bogie_link_to_center_${side}_axle_link" type="continuous">
      <parent link="${side}_bogie_link"/>
      <child link="center_${side}_axle_link"/>
      <origin xyz="-0.221 0.157 ${reflect * 0.07}"/>
      <axis xyz="0 0 1"/>
    </joint>
  </xacro:macro>

  <!-- Joints -->

  <joint name="base_link_to_chassis_link" type="fixed">
    <origin xyz="0 0 0.42"/>
    <parent link="base_link"/>
    <child link="chassis_link"/>
  </joint>

