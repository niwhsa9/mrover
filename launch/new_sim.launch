<launch>
  <rosparam command="load" file="$(find mrover)/config/simulator/autonomy.yaml"/>

  <include file="$(find mrover)/launch/auton.launch">
    <arg name="sim" value="true"/>
    <arg name="ekf_start_delay" value="1"/>
    <arg name="use_linearization" value="false"/>
  </include>

  <node pkg="nodelet" type="nodelet" name="simulator_nodelet"
        args="load mrover/SimulatorNodelet nodelet_manager" output="screen"/>
</launch>
